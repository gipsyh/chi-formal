export action hn_handle_req = {
    require ~nodes(hn_nid).req_channel.is_empty;
    var mid: midx_t := nodes(hn_nid).req_channel.recv;
    if msg.m(mid).opcode = req_read_not_share_dirty_t {
        if some (u_rn: nid_t) is_rn(u_rn) & nodes(u_rn).cs_is_u(msg.m(mid).addr) {
            var smid: midx_t := nodes(u_rn).snp_channel.send;
            msg.m(smid).src_id := hn_nid;
            msg.m(smid).tgt_id := u_rn;
            msg.m(smid).txn_id := nodes(hn_nid).txns.new;
            msg.m(smid).addr := msg.m(mid).addr;
            msg.m(smid).opcode := snp_read_not_share_dirty_fwd_t;
        } else {
            if nodes(hn_nid).cs_is_i(msg.m(mid).addr) {
                var rmid: midx_t := nodes(sn_nid).req_channel.send;
                msg.m(rmid).src_id := hn_nid;
                msg.m(rmid).tgt_id := sn_nid;
                msg.m(rmid).txn_id := nodes(hn_nid).txns.new;
                msg.m(rmid).addr := msg.m(mid).addr;
                msg.m(rmid).opcode := req_read_no_snp_t;
                msg.m(rmid).return_nid := msg.m(mid).src_id;
                msg.m(rmid).return_txn_id := msg.m(mid).txn_id;
            } else {
                assert false;
            }
        }
    } else {
        assert false;
    }
    msg.free(mid);
}

export action sn_handle_req = {
    require ~nodes(sn_nid).req_channel.is_empty;
    var mid: midx_t := nodes(sn_nid).req_channel.recv;
    if msg.m(mid).opcode = req_read_no_snp_t {
        var tgt: nid_t := msg.m(mid).return_nid;
        var dmid: midx_t := nodes(tgt).data_channel.send;
        msg.m(dmid).src_id := sn_nid;
        msg.m(dmid).tgt_id := tgt;
        msg.m(dmid).txn_id := msg.m(mid).return_txn_id;
        msg.m(dmid).data := memory(msg.m(mid).addr);
        msg.m(dmid).home_nid := msg.m(mid).src_id;
        msg.m(dmid).dbid := msg.m(mid).txn_id;
        msg.m(dmid).share := false;
    } else {
        assert false;
    }
    msg.free(mid)
}

export action rn_handle_data(rn: nid_t) = {
    require is_rn(rn);
    require ~nodes(rn).data_channel.is_empty;
    var dmid: midx_t := nodes(rn).data_channel.recv;
    var addr: addr_t := nodes(rn).txns.m(msg.m(dmid).txn_id).addr;
    nodes(rn).cache_data(addr) := msg.m(dmid).data;
    if msg.m(dmid).share {
        nodes(rn).cache_state(addr) := cs_sc;
    } else {
        nodes(rn).cache_state(addr) := cs_uc;
    }
    var tgt: nid_t := msg.m(dmid).home_nid;
    var rspmid: midx_t := nodes(tgt).resp_channel.send;
    msg.m(rspmid).src_id := rn;
    msg.m(rspmid).tgt_id := tgt;
    msg.m(rspmid).txn_id := msg.m(dmid).dbid;
    msg.free(dmid);
}

export action hn_handle_resp = {
    require ~nodes(hn_nid).resp_channel.is_empty;
    var rmid: midx_t := nodes(hn_nid).resp_channel.recv;
    msg.free(rmid);
}

export action rn_handle_snp(rn: nid_t) = {
    require is_rn(rn);
    require ~nodes(rn).snp_channel.is_empty;
    var smid: midx_t := nodes(rn).snp_channel.recv;
    assert nodes(rn).cs_is_u(msg.m(smid).addr);

}

invariant (nodes(X).cs_is_u(A) & nodes(Y).cs_is_u(A)) -> X = Y
