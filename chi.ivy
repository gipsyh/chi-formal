#lang ivy1.7

include node

individual memory(A: addr_t): data_t

export action rn_req_read_not_share_dirty(rn: nid_t, addr: addr_t) = {
    require is_rn(rn) & nodes(rn).cs_is_i(addr);
    var mid: midx_t := nodes(hn_nid).req_channel.send;
    msg.m(mid).src_id := rn;
    msg.m(mid).tgt_id := hn_nid;
    msg.m(mid).txn_id := nodes(rn).txns.new;
    msg.m(mid).addr := addr;
    msg.m(mid).opcode := req_read_not_share_dirty_t;
    nodes(rn).txns.m(msg.m(mid).txn_id).addr := addr;
}

